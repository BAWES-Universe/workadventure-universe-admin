# Database Configuration
# These are used by docker-compose.yml for the PostgreSQL container
DB_USER=workadventure
DB_PASSWORD=workadventure
DB_NAME=workadventure_admin

# Database Connection URL
# Construct from the variables above: postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
# For Docker Compose services, use the service name 'postgres'
# For connecting from host machine, use 'localhost' or '127.0.0.1' instead of 'postgres'
DATABASE_URL=postgresql://workadventure:workadventure@postgres:5432/workadventure_admin

# OIDC Configuration
OIDC_ISSUER=http://oidc.workadventure.localhost
OIDC_CLIENT_ID=authorization-code-client-id
OIDC_CLIENT_SECRET=authorization-code-client-secret

# Admin API Token (must match WorkAdventure's ADMIN_API_TOKEN)
ADMIN_API_TOKEN=123

# Next.js Public API URL (used for OIDC redirects)
NEXT_PUBLIC_API_URL=http://admin.bawes.localhost

# Traefik Port (default: 8321)
TRAEFIK_PORT=8321