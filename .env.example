# Database Configuration
# These are used by docker-compose.yml for the PostgreSQL container
DB_USER=workadventure
DB_PASSWORD=workadventure
DB_NAME=workadventure_admin

# Start room path
START_ROOM_URL=@/default/default/default

# S3 Config
AWS_ACCESS_KEY_ID=
AWS_BUCKET=
AWS_DEFAULT_REGION=
AWS_ENDPOINT=
AWS_SECRET_ACCESS_KEY=
AWS_URL=

# Database Connection URL
# Construct from the variables above: postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
# For Docker Compose services, use the service name 'postgres'
# For connecting from host machine, use 'localhost' or '127.0.0.1' instead of 'postgres'
DATABASE_URL=postgresql://workadventure:workadventure@postgres:5432/workadventure_admin

# Redis URL
REDIS_URL=redis://redis:6379

# OIDC Configuration
OIDC_ISSUER=http://oidc.workadventure.localhost
OIDC_CLIENT_ID=authorization-code-client-id
OIDC_CLIENT_SECRET=authorization-code-client-secret

# Admin API Token (must match WorkAdventure's ADMIN_API_TOKEN)
ADMIN_API_TOKEN=123

# Next.js Public API URL (used for OIDC redirects)
NEXT_PUBLIC_API_URL=http://admin.bawes.localhost

# Traefik Port (default: 8321)
TRAEFIK_PORT=8321

# Map Storage Configuration
MAP_STORAGE_API_TOKEN=123
PUBLIC_MAP_STORAGE_URL=http://host.docker.internal:3000

# Play Service Configuration
PLAY_URL=http://play.workadventure.localhost

# Default Domain (optional, defaults to hostname from PLAY_URL)
# Used for WAM file paths in map-storage during seeding
# DEFAULT_DOMAIN=workadventure.localhost

# Base Start Map (TMJ file URL - used by /api/map endpoint as fallback)
# Note: START_ROOM_URL on line 8 is for playUri path redirects
BASE_START_MAP_URL=https://rveiio.github.io/BAWES-virtual/office.tmj

# Discord Webhook (optional - for room access notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Login Page Configuration
# Enable manual token input form for developers (default: false)
# Only set to true for development/testing without WorkAdventure iframe
# NEXT_PUBLIC_ENABLE_MANUAL_LOGIN=false

# Super Admin Configuration
# Comma-separated list of email addresses that have super admin privileges
# Super admins can see sensitive information like IP addresses, map URLs, and WAM URLs
# SUPER_ADMINS=khalid@bawes.net,mishari@bawes.net